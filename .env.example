# 서버 설정
PORT=3000
NODE_ENV=development

# API 설정
API_VERSION=1
API_PREFIX=api/v

# JWT 설정 (필수 - 강력한 시크릿 키 사용)
JWT_SECRET=your-very-strong-jwt-secret-key-min-32-characters
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# 데이터베이스 설정 (필수)
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-secure-password
DATABASE_NAME=your-database-name
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# SSL 설정 (클라우드 DB 사용 시)
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# 연결 풀 설정
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5
DATABASE_CONNECTION_TIMEOUT=30000

REDIS_URL=localhost
REDIS_HOST=localshot
REDIS_PORT=0000
REDIS_USERNAME=default
REDIS_PASSWORD=password
REDIS_DB=0
# 테스트 Redis 설정 (필수)
TEST_REDIS_URL=redis://default:localhost:0000
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=0000
TEST_REDIS_USERNAME=default
TEST_REDIS_PASSWORD=password
TEST_REDIS_DB=1

# 파일 스토리지 설정
STORAGE_TYPE=r2
STORAGE_ENDPOINT=https://asdsadsadsadsadsa.r2.cloudflarestorage.com
STORAGE_BUCKET=connecto
STORAGE_ACCESS_KEY_ID=key
STORAGE_SECRET_ACCESS_KEY=secret_key
STORAGE_REGION=auto
STORAGE_PUBLIC_URL=https://asdsadsadsadsadsa.r2.cloudflarestorage.com/name

# Cloudflare Media 설정 (Stream/Images) - 선택사항
# 기본적으로 STORAGE_SECRET_ACCESS_KEY를 재사용합니다
# 별도 설정이 필요한 경우에만 아래 변수들을 설정하세요
# CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id  # 자동으로 STORAGE_ENDPOINT에서 추출됨
# CLOUDFLARE_STREAM_API_TOKEN=your-stream-api-token  # 기본값: STORAGE_SECRET_ACCESS_KEY
# CLOUDFLARE_IMAGES_API_TOKEN=your-images-api-token  # 기본값: STORAGE_SECRET_ACCESS_KEY
# CLOUDFLARE_IMAGES_ACCOUNT_HASH=your-images-account-hash  # 기본값: Account ID

# 파일 업로드 제한
MAX_FILE_SIZE=524288000
MAX_IMAGE_SIZE=524288000
MAX_VIDEO_SIZE=524288000
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov,webm
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,zip,rar

# Travel/Planet 설정
TRAVEL_MAX_PLANETS=10
PLANET_MAX_MEMBERS_GROUP=100
PLANET_MAX_MEMBERS_DIRECT=2 

# Frontend URL
FRONTEND_URL=http://localhost:3000

# 로그 레벨
LOG_LEVEL=info 